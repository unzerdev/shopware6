{% block sw_system_config_content_card_field %}
    <template v-if="element.name != 'UnzerPayment6.settings.applePayPaymentProcessingCertificateId' && element.name != 'UnzerPayment6.settings.applePayMerchantIdentificationCertificateId'">
        {% parent() %}

        <template v-if="element.name == 'UnzerPayment6.settings.publicKey' && ((actualConfigData[currentSalesChannelId] && actualConfigData[currentSalesChannelId]['UnzerPayment6.settings.applePayPaymentProcessingCertificateId']) || (actualConfigData.null && actualConfigData.null['UnzerPayment6.settings.applePayPaymentProcessingCertificateId']))">
            <sw-label
                variant="info"
                appearance="pill">
                <sw-icon name="regular-info-circle" :small="true"></sw-icon>
                <small v-html="$tc('unzer-payment-settings.apple-pay.publicKey.changeNotice')"></small>
            </sw-label>
            <br><br>
        </template>
    </template>
{% endblock %}
